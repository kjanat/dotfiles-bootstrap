#!/usr/bin/env bash

if [ -n "$BASH_VERSION" ] || [ -n "$ZSH_VERSION" ]; then
    exec bash ./bootstrap.sh
elif [ -n "$CSH_VERSION" ] || [ -n "$tcsh" ]; then
    exec csh ./bootstrap.csh
elif command -v pwsh &> /dev/null; then
    exec pwsh -NoProfile -ExecutionPolicy Bypass -File ./bootstrap.ps1
elif command -v powershell &> /dev/null; then
    exec powershell -NoProfile -ExecutionPolicy Bypass -File ./bootstrap.ps1
else
    echo "Unsupported shell. Please run the appropriate bootstrap script manually."
    exit 1
fi
