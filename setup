#!/usr/bin/env bash

# Simple shell detection - prioritize what actually works
if command -v pwsh &> /dev/null; then
    exec pwsh -NoProfile -ExecutionPolicy Bypass -File ./setup.ps1
elif command -v powershell &> /dev/null; then
    exec powershell -NoProfile -ExecutionPolicy Bypass -File ./setup.ps1
else
    # Default to bash for Unix-like systems
    exec bash ./setup.sh
fi
